<!doctype html>
<html class="no-js" lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Box Sample Application</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <meta name="viewport" content="width=device-width,initial-scale=1">

  <link rel="stylesheet" href="css/boilerplate.css">
  <link rel="stylesheet" href="css/box.css">
  <link rel="stylesheet" href="css/layout.css">
  <link rel="stylesheet" href="css/dashboard.css">
</head>
<body>

<div id="container">
  <header class="box_blue_bg">
    <h2 class="inline">
      <%= @account.login %>
    </h2>

    <h5 class="inline">
      Space avaliable: <span class="lgrey"><%= @account.space_amount.to_i / 1048576 %> MB</span>
    </h5>

    <h5 class="inline">
      Space used: <span class="lgrey"><%= @account.space_used.to_i / 104857 %> MB</span>
    </h5>

    <h3 id="logout" class="inline">
      <a href="/logout">Logout</a>
    </h3>
  </header>

  <div id="content">
    <%= yield %>
  </div>

  <footer>
    <h5 class="inline">
      Built with the <a href="https://www.box.com/developers/api">Box Platform API</a>
    </h5>
  </footer>

  <div id="fakefooter"></div>
</div> <!--! end of #container -->

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="js/jquery-1.6.2.min.js"><\/script>')</script>
<script src="js/dashboard.js"></script>

</body>
</html>
