<%# Creates the form for adding new folders %>

<li class="item">
  <form class="add_folder">
    <input type="hidden" name="parent" value="<%= parent_id %>" />
    <input type="text" name="name" placeholder="Enter folder name" class="folder_name" id="<%= parent_id %>_text"/>
    <span class="submit button">&gt;</span>
  </form>
</li>

